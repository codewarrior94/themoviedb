<div class="info_film">
            <img class="info-film-poster" width="396" src="https://image.tmdb.org/t/p/w400{{poster_path}}" alt="poster">
        <div class="info">
            <h2 class="original-title uppercase">{{title}}</h2>
            <ul class="info-list">
                <li class="item-info">
                    <span class="titles-info">Vote / Votes</span>
                    <span class="description-info"><span class="description-info-orang">{{vote_average}}</span> / {{vote_count}}</span>
                </li>
                <li class="item-info">
                    <span class="titles-info">Popularity</span>
                    <span class="description-info">{{popularity}}</span>
                </li>
                <li class="item-info">
                    <span class="titles-info">Original Title</span>
                    <span class="description-info uppercase">{{original_title}}</span>
                </li>
                <li class="item-info">
                    <span class="titles-info">Genre</span>
                    <ul class="description-info">
                        {{#each this.genres}}
                            <li class="description-info-item">{{this.name}}</li>&nbsp
                        {{/each}}
                    </ul>
                </li>
                <li class="item-info-about">
                    <p class="titles-info-about uppercase">About</p>
                    <p class="description-info-about">{{overview}}</p>
                </li>
            </ul>
            <div class="info-btn-container">
                <button class="btn-add btn-add-watched uppercase">
                    add to Watched
                </button>
                <button class="btn-add btn-add-queue uppercase">
                    add to queue
                </button>
            </div>
        </div>
</div>

